<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/goal_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9be57"
    android:orientation="vertical"
    tools:context="edu.apsu.csci.goalsandschedules.OnlineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/goal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/goal_border"
            android:text="Goals"
            android:textColor="#9739db" />

        <Button
            android:id="@+id/schedule_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/goal_border"
            android:text="Schedules"
            android:textColor="#9739db" />

        <Button
            android:id="@+id/online_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/goal_border"
            android:text="Online"
            android:textColor="#9739db" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Online Database"
        android:textColor="#20afb2"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/onlinegoal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#55f2f4"
            android:layout_weight="1"
            android:text="Goals" />

        <Button
            android:id="@+id/onlineschedule_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#55f2f4"
            android:layout_weight="1"
            android:text="Schedules" />

    </LinearLayout>

    <TextView
        android:id="@+id/online_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Goals"
        android:textColor="#20afb2"
        android:textSize="30sp" />

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@android:id/list"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="15dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:background="#f9be57"
        android:orientation="vertical"
        tools:context="edu.apsu.csci.goalsandschedules.GoalActivity">

    </ListView>

</LinearLayout>